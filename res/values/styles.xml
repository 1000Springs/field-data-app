<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="main_menu_button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="standard_button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/standard_button</item>
    </style>   

    <style name="standard_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">35dp</item>
    </style>
    
    <style name="standard_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>            
        <item name="android:button">@drawable/standard_checkbox</item>
    </style>       
    
    <style name="standard_spinner" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

	<style name="standard_spinner_item" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#808080</item>
	</style>
    
    <style name="standard_layout">
        <item name="android:background">#000000</item>
        <item name="android:editTextStyle">@style/standard_edit_text</item>
        <item name="android:buttonStyle">@style/standard_button</item>
    </style>
    
    <style name="form_label">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="form_input">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:ems">15</item>
    </style> 
    
    <style name="form_input_multiline" parent="@style/form_input">
        <item name="android:layout_height">80dp</item>
    </style>
    
    <style name="form_section_heading" parent="@style/form_label">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/section_heading</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="form_subsection_label" parent="@style/form_label">
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style name="form_row">
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="image_fragment_button" parent="@style/standard_button">
        <item name="android:width">150dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>    
    </style>  
    
    <style name="image_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">35dp</item>
        <item name="android:width">150dp</item>
        <item name="android:height">35dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <style name="image_tag_photo" parent="@style/image_tag">
        <item name="android:background">@color/green_base</item>
    </style>  
    
    <style name="image_tag_sketch" parent="@style/image_tag">
        <item name="android:background">@color/purple_base</item>
    </style> 
    
    <style name="image_tag_annotated_photo" parent="@style/image_tag">
        <item name="android:background">@color/red_base</item>
    </style> 
    
    <style name="spaced_button" parent="@style/standard_button">
        <item name="android:layout_marginLeft">20dp</item>
    </style> 
    
    <style name="indented_checkbox" parent="@style/standard_checkbox">
        <item name="android:layout_marginLeft">20dp</item>
    </style>   
    
    <style name="column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style> 
    
    <style name="column_fixed_width" parent="@style/column">
        <item name="android:layout_width">250dp</item>
    </style>
    
        <style name="column_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@color/table_header_background</item>
        <item name="android:textColor">@color/section_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style> 
    
    <style name="column_header_fixed_width" parent="@style/column_header">
        <item name="android:layout_width">250dp</item>
    </style>
    
    <style name="standard_link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/link</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>    
    
</resources>