<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <TextView
        android:id="@+id/size_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/size_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/size_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/size_label"
        android:layout_alignBaseline="@+id/size_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />
    
    <TextView
        android:id="@+id/colour_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/size_input"
        android:text="@string/colour_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/colour_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/colour_label"
        android:layout_alignBaseline="@+id/colour_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />
    
    <TextView
        android:id="@+id/clarity_turbidity_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/size_label"
        android:layout_below="@+id/size_label"
        android:layout_marginTop="30dp"
        android:text="@string/clarity_turbidity_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/clarity_turbidity_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/size_input"
        android:layout_alignBaseline="@+id/clarity_turbidity_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />    
        
    <TextView
        android:id="@+id/ebullition_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colour_label"
        android:layout_alignBaseline="@+id/clarity_turbidity_label"
        android:text="@string/ebullition_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/ebullition_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colour_input"
        android:layout_alignBaseline="@+id/ebullition_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  
        
    <TextView
        android:id="@+id/odour_gas_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clarity_turbidity_label"
        android:layout_below="@+id/clarity_turbidity_label"
        android:layout_marginTop="30dp"
        android:text="@string/odour_gas_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/odour_gas_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clarity_turbidity_input"
        android:layout_alignBaseline="@+id/odour_gas_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  

    <TextView
        android:id="@+id/temperature_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ebullition_label"
        android:layout_alignBaseline="@+id/odour_gas_label"
        android:text="@string/temperature_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/temperature_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ebullition_input"
        android:layout_alignBaseline="@+id/temperature_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  

    <TextView
        android:id="@+id/water_level_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/odour_gas_label"
        android:layout_below="@+id/odour_gas_label"
        android:layout_marginTop="30dp"
        android:text="@string/water_level_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/water_level_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/odour_gas_input"
        android:layout_alignBaseline="@+id/water_level_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  
        
    <TextView
        android:id="@+id/flow_rate_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temperature_label"
        android:layout_alignBaseline="@+id/water_level_label"
        android:text="@string/flow_rate_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/flow_rate_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temperature_input"
        android:layout_alignBaseline="@+id/flow_rate_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  

    <TextView
        android:id="@+id/wind_speed_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/water_level_label"
        android:layout_below="@+id/water_level_label"
        android:layout_marginTop="30dp"
        android:text="@string/wind_speed_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/wind_speed_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/water_level_input"
        android:layout_alignBaseline="@+id/wind_speed_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />  

    <TextView
        android:id="@+id/air_temperature_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flow_rate_label"
        android:layout_alignBaseline="@+id/wind_speed_label"
        android:text="@string/air_temperature_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/air_temperature_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flow_rate_input"
        android:layout_alignBaseline="@+id/air_temperature_label"
        android:ems="10"
        android:hint=""
        android:inputType="text" />      

      
    <Button android:id="@+id/open_bio_sample_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wind_speed_label"
        android:layout_alignLeft="@+id/wind_speed_label"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/bio_sample_button"/>
    
</RelativeLayout>